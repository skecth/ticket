<div id="<%= dom_id event %>">
  <p>
    <strong>Title:</strong>
    <%= event.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= event.description %>
  </p>

  <p>
    <strong>Event date:</strong>
    <%= event.event_date %>
  </p>

  <strong>Ticket:</strong>
    <ul>
      <% event.tickets.each do |ticket| %>
        <li>
          <%= ticket.title %>
          RM <%= ticket.price %>
          <%= link_to "See More", ticket %>
        </li>
      <% end %>
    </ul>

</div>
