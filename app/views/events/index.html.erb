<p style="color: green"><%= notice %></p>

<div class="dropdown" aria-expanded="false">
Sort by:
  <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    All
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "All", sort_by: 'all', class:"dropdown-item" %></li>
    <li><%= link_to "Date", sort_by: 'date' %></li>
    <li><%= link_to "Price", sort_by: "price" %></li>
  </ul>
</div>

<h2>Events</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @events.each do |event| %>
    <div class="col">
      <div class="card h-100">
        <div style="height:300px; background-color:black;">
        <%= image_tag event.poster_url, class:"card-img-top", style:"width:100%; height:100%" %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to event.title, event %></h5>
          <p class="card-text"><%= event.location %></p>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-event" viewBox="0 0 16 16">
            <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"/>
            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
          </svg>
          <p class="card-text d-inline"><%= event.event_date.strftime("%d %B %Y") %></p><br>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-ticket-perforated" viewBox="0 0 16 16">
            <path d="M4 4.85v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Z"/>
            <path d="M1.5 3A1.5 1.5 0 0 0 0 4.5V6a.5.5 0 0 0 .5.5 1.5 1.5 0 1 1 0 3 .5.5 0 0 0-.5.5v1.5A1.5 1.5 0 0 0 1.5 13h13a1.5 1.5 0 0 0 1.5-1.5V10a.5.5 0 0 0-.5-.5 1.5 1.5 0 0 1 0-3A.5.5 0 0 0 16 6V4.5A1.5 1.5 0 0 0 14.5 3h-13ZM1 4.5a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 .5.5v1.05a2.5 2.5 0 0 0 0 4.9v1.05a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-1.05a2.5 2.5 0 0 0 0-4.9V4.5Z"/>
          </svg>
          <p class="card-text d-inline">From: <%= number_to_currency(event.tickets.minimum(:price)) %>
        </div>
      </div>
    </div>
  <% end %>
</div>

